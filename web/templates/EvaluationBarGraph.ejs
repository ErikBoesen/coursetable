<%#
	EvaluationBarGraph.ejs

	Type: template component
	Usage: Small bar graphs for showing course statistics

	Variables:
		evaluation: array containing average.rating, average.workload
%>
<% var average = evaluation.average || {}; %>
<%= include('Bar.ejs', {
	data: average.rating,
	max: 5,
	barClasses: 'chart-bar bar-blue rating-bar',
	digits: 2
}) %>
<%= include('Bar.ejs', {
	data: average.workload,
	max: 5,
	barClasses: 'chart-bar bar-red difficulty-bar',
	digits: 2
}) %>
